<main>

  <div class="content-container">

    <section class="map-container">

      <div id="map"></div>

      <div class="import-and-save-buttons-container">

        <div class="import-map-element">
            <button type="button" class="import-map-button">Import Map</button>
        </div>

        <div class="save-map-element">
            <button type="button" class="save-map-button">Save Map</button>
        </div>

      </div>

    </section>

    <aside class="saved-places-container">

      <div class="search-bar-container">
        <div class="search-bar-element">
          <input type="text" name="filter-text" class="search-bar-input">
        </div>
        <button class="search-bar-button">Search</button>
      </div>

      <div class="saved-places-list-container">
        <ul class="saved-places-list-element">

        </ul>
      </div>

    </aside>

  </div>

</main>

<div class="import-modal-backdrop hidden"></div>
<div class="import-modal-container hidden">

  <div class="modal-header">
    <h2 class="modal-title">Import Map</h2>
    <button type="button" class="import-modal-x-button">&times;</button>
  </div>

  <div class="modal-description">
    <p>Available Maps:</p>
  </div>

  <div class="modal-body import-body">
    <div class="import-modal-directory-container">

    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="import-modal-close-button action-button">Close</button>
  </div>

</div>

<div class="save-modal-backdrop hidden"></div>
<div class="save-modal-container hidden">

  <div class="modal-header">
    <h2 class="modal-title">Saving Map</h2>
    <button type="button" class="save-modal-x-button">&times;</button>
  </div>

  <div class="modal-input-container">
    <h1 class="modal-input-text">Map Name:</h1>
    <div class="modal-input-element">
      <input type="text" class="save-modal-input">
    </div>
  </div>

  <div class="modal-description">
    <p>You're about to save the following locations:</p>
  </div>

  <div class="modal-body">
    <table class="modal-pins-table">
      <tr class="modal-pins-table-header">
        <th class="modal-pins-table-checkboxes"><input type="checkbox" class="table-select-all" onClick="toggle(this)"></th>
        <th class="header-pin-name">Pin Name</th>
        <th class="header-latitude">Latitude</th>
        <th class="header-longitude">Longitude</th>
      </tr>
    </table>
  </div>

  <div class="modal-footer">
    <button type="button" class="save-modal-save-button action-button">Save</button>
    <button type="button" class="save-modal-close-button action-button">Close</button>
  </div>

</div>
